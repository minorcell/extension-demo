{
  "manifest_version": 3,
  "name": "GitHub DeepSeek Sidebar Chat",
  "version": "0.2.0",
  "description": "在 GitHub issue 页面右下角提供浮点按钮，打开浏览器侧边栏聊天，并通过 DeepSeek 大模型进行回复。",
  "permissions": [
    "storage",
    "tabs",
    "sidePanel"
  ],
  "host_permissions": [
    "https://api.deepseek.com/*"
  ],
  "action": {
    "default_title": "DeepSeek GitHub Chat"
  },
  "side_panel": {
    "default_path": "panel.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*"
      ],
      "js": [
        "scripts/content.js"
      ],
      "css": [
        "styles/content.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },
  "options_page": "options.html"
}